{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "../app/src/main/assets/bridge",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "downlevelIteration": true
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}